<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:weightSum="3">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.25"
        android:padding="5dp"
        android:background="#66a39c"
        android:layout_marginBottom="3dp"
        android:clickable="false"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_title"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:paddingLeft="2dp"
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/txt_adv"
            android:layout_weight="0.5"
            android:text="ADVANCED"
            android:textAllCaps="true"
            android:textSize="10sp"
            android:gravity="center"
            android:clickable="true"
            android:layout_gravity="right" />

    </LinearLayout>
    <fragment android:id="@+id/map"
        android:layout_weight="1.75"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.35"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:padding="5dp"
        android:background="#9ab5e0"
        android:weightSum="3">
        <TextView
            android:id="@+id/txt_locationheader"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:textColor="#000000">
        </TextView>
        <TextView
            android:id="@+id/txt_locationvalue"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:textColor="#000000">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.35"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="#dce09a"
        android:weightSum="1"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.75"
            android:weightSum="1">

            <TextView
                android:id="@+id/txt_tempheader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.50"
                android:gravity="center_vertical"
                android:padding="2dp"
                android:textColor="#000000">
            </TextView>

            <TextView
                android:id="@+id/txt_tempvalue"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_vertical"
                android:layout_weight="0.50"
                android:padding="2dp"
                android:textColor="#000000">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">
            <ImageView
                android:id="@+id/img_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Suggestions"
        android:background="@color/login_blue"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:gravity="center"
        android:id="@+id/btn_getSugg"
        android:layout_gravity="center_horizontal" />
        </LinearLayout>

</LinearLayout>





